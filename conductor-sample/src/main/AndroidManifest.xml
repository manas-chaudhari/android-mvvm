<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manaschaudhari.android_mvvm.sample">

    <application
        android:name=".ExampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".adapters.ItemListActivity"
            android:label="@string/title_adapters" />
        <activity
            android:name=".functional.DataLoadingActivity"
            android:label="@string/title_functional" />
        <activity android:name=".ItemDetailsActivity" />
        <activity
            android:name=".two_way_binding.SearchActivity"
            android:label="@string/title_two_way_binding" />
        <activity
            android:name=".calculator_example.CalculatorActivity"
            android:label="@string/title_calculator"></activity>
    </application>

</manifest>